{
  "name": "nipuna777.com",
  "version": "1.0.0",
  "description": "Nipuna Gunathilake - Home Page",
  "main": "index.js",
  "scripts": {
    "serve": "live-server ./dist",
    "start": "npm-run-all --parallel sass-compile serve html-watch z:copy",
    "sass-compile": "node-sass -w src/css/ -o dist/css/",
    "html-watch": "onchange 'src/*.html' -v -- npm run z:copy-html",
    "z:copy-html": "copyfiles -f src/*.html dist/",
    "z:copy": "copyfiles *.ico dist/",
    "dist:juice": "juice dist/index.html dist/index.html",
    "dist":"npm-run-all --parallel sass-compile z:copy-html z:copy dist:juice"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nipuna777/nipuna777.com.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nipuna777/nipuna777.com/issues"
  },
  "homepage": "https://github.com/nipuna777/nipuna777.com#readme",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "http-server": "^0.10.0",
    "inline-css": "^2.2.2",
    "juice": "^4.1.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1"
  }
}
