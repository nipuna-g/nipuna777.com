{
  "name": "nipuna777.com",
  "version": "1.0.0",
  "description": "Nipuna Gunathilake - Home Page",
  "main": "index.js",
  "scripts": {
    "build": "npm run z:clean && npm run z:copy && npm run z:copy-assets && npm run z:sass-compile",
    "start": "npm run build && npm-run-all --parallel z:serve z:watch",
    "z:clean": "rimraf dist",
    "z:serve": "live-server ./dist",
    "z:copy": "copyfiles -f src/**/*.{js,ico,html} dist/",
    "z:copy-assets": "copyfiles -f src/**/*.{jpg,png} dist/assets",
    "z:sass-compile": "node-sass src/css/ -o dist/assets/",
    "z:watch": "onchange \"src/**/*.{scss,jpg,ico,html}\" -v -- npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nipuna777/nipuna777.com.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nipuna777/nipuna777.com/issues"
  },
  "homepage": "https://github.com/nipuna777/nipuna777.com#readme",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "http-server": "^0.10.0",
    "inline-css": "^2.2.2",
    "juice": "^4.1.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "rimraf": "^2.6.2"
  }
}
